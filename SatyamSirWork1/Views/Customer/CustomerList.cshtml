
@{
    ViewBag.Title = "CustomerList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Customer List</h2>
<table id="Customertable">
    <thead>
        <tr>
            <td>Cutomer Name</td>
            <td>Cutomer Age</td>
            <td>Cutomer Email</td>
            <td>Cutomer Address</td>
            <td>Cutomer Pincode</td>
            <td>Cutomer Phone</td>
        </tr>
    </thead>
</table>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <link href="~/Content/DataTable.min.css" rel="stylesheet" />
    @section scripts

    {
        <script src="~/Scripts/DataTable.min.js"></script>
    }
<script>
    $(document).ready(function () {
        $('#Customertable').DataTable({
            "ajax": {
                "url": "/Customer/GetCustomerList",
                "type": "GET",
                "datatype": "json"
            },
            "columns": [
                {
                    "data": "cust_name"
                },
                {
                    "data": "cust_age"
                },
                {
                    "data": "cust_email"
                },
                {
                    "data": "cust_address"
                },
                {
                    "data": "cust_pincode"
                },
                {
                    "data": "cust_contact"
                },

            ]




        });
    });
</script>

